var peopleInHouseHold = document.getElementById("people").value;

function getRating(ratingCategory, peopleInHouseHold)
{
    var ratingCategory = $("#ber_rating").text();
    var saving = calculateSaving(ratingCategory,peopleInHouseHold);
    $("#you_save").text("You save â‚¬" + saving);

}

    var ratingCategory = $("#ber_rating").text();


function calculateSaving(){

            var peopleInHouseHold = document.getElementById("people").value;
            if (ratingCategory == 'The Energy Rating is A1'){return peopleInHouseHold * 100}
            if (ratingCategory == 'The Energy Rating is A2'){return peopleInHouseHold * 90}
            if (ratingCategory == 'The Energy Rating is A3'){return peopleInHouseHold * 80}
            if (ratingCategory == 'The Energy Rating is B1'){return peopleInHouseHold * 70}

}
setTimeout(function() { a1(); }, 2000);

</script>
